{
  "private": true,
  "name": "gitbook-starter-kit",
  "license": "MIT",
  "version": "1.0.1",
  "description": "GitBook Starter Kit.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "prepublish": "gitbook install",
    "start": "gitbook serve",
    "build": "gitbook build",
    "eslint": "eslint --cache 'src/**/*.js'",
    "textlint": "textlint --cache 'ja/**/*.md' -f pretty-error",
    "test:js": "mocha",
    "test": "npm-run-all --parallel test:js textlint eslint build"
  },
  "keywords": [
    "gitbook",
    "textlint"
  ],
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-register": "^6.7.2",
    "eslint": "^4.1.0",
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-include-codeblock": "^3.0.0",
    "mocha": "^4.0.0",
    "npm-run-all": "^4.0.0",
    "power-assert": "^1.3.1",
    "textlint": "^9.0.0",
    "textlint-rule-eslint": "^2.0.0",
    "textlint-rule-no-start-duplicated-conjunction": "^1.0.7",
    "textlint-rule-preset-ja-technical-writing": "^2.0.0",
    "textlint-rule-prh": "^5.0.0"
  }
}
